<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/username_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="My Bookings"/>

    <TextView
        android:id="@+id/username_newBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="New"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/linearLayout">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/row1_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Device1"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/row1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="View my booking" />

                <TextView
                    android:id="@+id/row1_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:padding="10dp"
                    android:textColor="#2196F3"
                    android:text="Delete" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/row2_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Device2"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/row2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="View my booking" />

                <TextView
                    android:id="@+id/row2_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:padding="10dp"
                    android:textColor="#2196F3"
                    android:text="Delete" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/row3_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Device3"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/row3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="View my booking" />

                <TextView
                    android:id="@+id/row3_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:padding="10dp"
                    android:textColor="#2196F3"
                    android:text="Delete" />
            </TableRow>



        </TableLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/back_button"
        android:layout_below="@+id/linearLayout"
        android:text="Back"/>
    <ImageView
        android:src="@drawable/microscope"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/device_imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />
    <ImageView
        android:id="@+id/list_image"
        android:src="@drawable/list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="80dp" />



</RelativeLayout>



